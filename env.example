# =============================================================================
# MetaMind Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values.
# NEVER commit .env files with real credentials to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Provider Configuration
# -----------------------------------------------------------------------------
# Supported providers: truefoundry, anthropic, openai, custom
LLM_PROVIDER=truefoundry

# TrueFoundry Configuration (Default - Recommended)
# Get your API key from TrueFoundry console
LLM_API_KEY=eyJhbGciOiJSUzI1NiIsInR5cCI6IkpXVCIsImtpZCI6Im9YWU5yQmV0d2pEZDI3emZvZkk0ZHUyVGVybyJ9...your_token_here
LLM_MODEL=pi-agentic/us-anthropic-claude-sonnet-4-20250514-v1-0
LLM_BASE_URL=https://tfy.internal.ap-south-1.production.apps.pai.mypaytm.com/api/llm/api/inference/openai

# Alternative: Anthropic via Proxy (Legacy)
# LLM_PROVIDER=anthropic
# LLM_API_KEY=your_anthropic_api_key
# LLM_MODEL=anthropic/claude-sonnet-4
# LLM_BASE_URL=https://cst-ai-proxy.paytm.com

# Alternative: OpenAI Direct
# LLM_PROVIDER=openai
# LLM_API_KEY=your_openai_api_key
# LLM_MODEL=gpt-4
# LLM_BASE_URL=https://api.openai.com/v1

# LLM Request Settings
LLM_MAX_RETRIES=3
LLM_TIMEOUT=300

# -----------------------------------------------------------------------------
# Superset Configuration
# -----------------------------------------------------------------------------
# Get these values from your browser's DevTools after logging into Superset:
# 1. Open DevTools (F12) > Network tab
# 2. Make any request to Superset
# 3. Find the Cookie and X-CSRFToken headers
SUPERSET_BASE_URL=https://cdp-dataview.platform.mypaytm.com
SUPERSET_COOKIE=session=your_session_cookie_here
SUPERSET_CSRF_TOKEN=your_csrf_token_here

# -----------------------------------------------------------------------------
# Trino/Starburst Configuration (for table validation)
# -----------------------------------------------------------------------------
TRINO_HOST=trino-production.internal.paytm.com
TRINO_PORT=443
TRINO_USER=your_email@paytm.com
TRINO_CATALOG=hive
TRINO_SCHEMA=cdo

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Output directories (relative to project root)
EXTRACTED_META_DIR=extracted_meta
LOGS_DIR=logs

# Progress tracking
PROGRESS_UPDATE_INTERVAL=3

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable/disable specific features
ENABLE_TABLE_VALIDATION=true
ENABLE_SCHEMA_ENRICHMENT=true
ENABLE_LLM_METADATA=true

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
# Max requests per minute for external APIs
SUPERSET_RATE_LIMIT=60
LLM_RATE_LIMIT=30

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
# Set to true to enable debug mode
DEBUG_MODE=false

# Skip LLM calls (use cached results if available)
USE_CACHED_LLM=false
